<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="rgl_fld">
    <%= f.text_field :name, autofocus: true, placeholder: 'full name *' %>
  </div>
  <div class="rgl_fld">
    <%= f.text_field :username, autofocus: true, placeholder: 'username *' %>
  </div>
  <div class="rgl_fld">
    <%= f.email_field :email, autofocus: true, placeholder: 'email *' %>
  </div>
  <br/>
  <div class="rgl_fld">
    <%= f.password_field :password, autocomplete: "off", placeholder: 'password (6 characters minimum)*' %>
  </div>
  <div class="rgl_fld">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'password confirmation*' %>
  </div>
  <div>
    <button class="button button-block">GET STARTED</button>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
