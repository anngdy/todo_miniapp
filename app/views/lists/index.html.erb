<p id="notice"><%= notice %></p>

<h1>My lists</h1>

<table cellpadding="0" cellspacing="0" class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Privacy</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.privacy %></td>
        <td><%= list.status %></td>
        <td>
        <%= content_tag :a, '', href: list_path(id: list.id), title: 'Details', class: 'fa fa-file-text-o' %>
        </td>
        <td><%= content_tag :a, '', href: edit_list_path(id: list.id), title: 'Edit', class: 'fa fa-pencil' %></td>
        <td><%= content_tag :a, '', href: destroy_list_path(id: list.id), title: 'Delete', method: :destroy, data: { confirm: 'Are you sure?' }, class: 'fa fa-times text-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path, class: 'styled_links' %>
