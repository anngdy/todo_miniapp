<p id="notice"><%= notice %></p>

<h1>My Bookmarks</h1>

<table cellpadding="0" cellspacing="0" class="table table-striped">
  <thead>
    <tr>
      <th>List Name</th>
      <th>Description</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.list.name %></td>
        <td><%= bookmark.list.description %></td>
        <td><%= bookmark.list.user.username %></td>

        <td><%= content_tag :a, '', href: list_path(id: bookmark.list_id), title: 'Details', class: 'fa fa-file-text-o' %></td>
        <td><%= content_tag :a, '', href: edit_bookmark_path(id: bookmark.id), title: 'Edit', class: 'fa fa-pencil' %></td>
        <td><%= content_tag :a, '', href: destroy_bookmark_path(id: bookmark.id), title: 'Delete', method: :destroy, data: { confirm: 'Are you sure?' }, class: 'fa fa-times text-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Bookmark', new_bookmark_path %>
